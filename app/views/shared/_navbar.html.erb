  <div class="container", id="homepage-main-container">
    <div class="list-inline tabs-underlined">
     <%= link_to root_path, class: "navbar-brand" do %>
     <%= image_tag 'logo.png' %>
     <% end %>
     <li class="nav-item">
      <%= link_to "ABOUT US", new_user_session_path, class: "nav-link" %>
