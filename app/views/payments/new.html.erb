
<div class="container" id="payment-container" data-order="<%= @order.id %>" data-user="<%= current_user.email %>">
  <%= form_tag new_order_payment_path, id: "payment-form" do |form| %>
  <div class="group">
     <label>
      <span>First Name</span>
      <input id="name" class="field" placeholder="Jane" />
    </label>
    <!--<label>
      <span>Last Name</span>
      <input id="name" class="field" placeholder="Doe" />
    </label> -->
    <label class="w-100">
      <span>Card</span>
      <div id="card-element" class="field w-100 "></div>
    </label>
  </div>
  <button class='subscription-button'>Place your order</button>
  <div class="outcome">
    <div id="card-errors" role="alert"></div>
  </div>
  <% end %>
</div>

