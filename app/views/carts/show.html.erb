<div class="container">
  <% if @cart.products.count <= 0 %>
  <div class="link">
    <%= link_to "Explore what we offer", products_path, class: "btn-rounded-primary" %>
  </div>
      <h1 class= "text-center text-primary mt-3">No items in your cart yet</h1>
  <% else %>
  <div class="link">
    <%= link_to "Proceed to Checkout", new_product_path, class: "btn-rounded-primary" %>
  </div>

  <% @products.each do |product| %>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
  <div class="product_container">
    <div class="images">
      <img src="http://mistillas.cl/wp-content/uploads/2018/04/Nike-Epic-React-Flyknit-%E2%80%9CPearl-Pink%E2%80%9D-01.jpg", id="product-img" />
    </div>
    <div class="product">
      <p id="category_name"><%= product.category %></p>
      <h1 id="product_name"><%= product.name %></h1>
      <h2 id="price"><%= product.price %>â‚º</h2>
      <p class="desc"><%= product.description %></p>
      <div class="buttons">
        <% if current_user.cart.products.include?(product) %>
        <%= simple_form_for CartProduct.where(product: product, cart: current_user.cart).first, :method => :delete do |f| %>
        <%= f.submit "Remove from cart", class: "card_button" %>
        <% end %>
        <% else %>
        <%= simple_form_for @cart_product do |f| %>
        <%= f.hidden_field :product_id, value: product.id  %>
        <%= f.submit "Add to your Wishlist", class: "card_button" %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
