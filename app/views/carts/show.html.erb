<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-xs-8">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">
            <div class="row">
              <div class="col-xs-6">
                <h5 class="text-center mb-3"> Shopping Cart</h5>
              </div>

            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-2"><img class="img-responsive" src="http://placehold.it/100x70">
            </div>
            <div class="col-xs-4">
              <h4 class="product-name ml-3"><strong>Product name</strong></h4><h4 class="product-name ml-3"><small>Product description</small></h4>
            </div>
            <div class="col-xs-6">
              <div class="col-xs-6 text-right">
                <h6><strong>25.00 <span class="text-muted">x</span></strong></h6>
              </div>
              <div class="col-xs-4">
                <input type="text" class="form-control input-sm ml-1" value="1">
              </div>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-xs-2"><img class="img-responsive" src="http://placehold.it/100x70">
            </div>
            <div class="col-xs-4">
              <h4 class="product-name ml-3"><strong>Product name</strong></h4><h4 class="product-name ml-3"><small>Product description</small></h4>
            </div>
            <div class="col-xs-6">
              <div class="col-xs-6 text-right">
                <h6><strong>25.00 <span class="text-muted">x</span></strong></h6>
              </div>
              <div class="col-xs-4">
                <input type="text" class="form-control input-sm ml-1" value="1">
              </div>
              <div class="col-xs-2">
                <button type="button" class="btn btn-link btn-xs">
                  <span class="glyphicon glyphicon-trash"> </span>
                </button>
              </div>
            </div>
          </div>
          <div class="col-xs-3">
           <%= link_to "Continue Shopping", "#", class: "btn btn-primary text-white mb-3" %>
           <%= link_to "Update Cart", "#", class: "btn btn-primary text-white mb-3" %>
         </div>
       </div>
     </div>
   </div>
  </div>
<div class="col-xs-3">
  <%= link_to "Checkout", "#", class: "btn btn-primary text-white mb-3" %>
  <h4">Total <strong>$50.00</strong></h4>
</div>
</div>

