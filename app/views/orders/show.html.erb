
<div class="container bg-white">
  <div class="d-flex flex-column align-items-center pb-5">
      <h1 class="text-center pt-5">
      <i class="far fa-thumbs-up"></i>
      </h1>
      <h1 class="text-center pt-4">Order #<%= @order.id %> </h1>
    <h4 class="text-center p-4"><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></h4>
    <h2 class="text-primary text-center pt-4 pb-2">Payment successfull ! 👏</h2>
    <div class="d-flex">
    <span class="text-center p-4 d-flex align-items-center"><h6 class="mb-0">Address : &nbsp;</h6> <%= @order.delivery_address %></span>
    <span class="text-center p-4 d-flex align-items-center"><h6 class="mb-0">Phone number : &nbsp; </h6> <%= @order.delivery_contact_number %></span>
    </div>
    <h6 class="text-center p-4"><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></h6>
    <p class="text-center pb-5">Estimated delivery in <strong>2 business days</strong></p>

  </div>
</div>
