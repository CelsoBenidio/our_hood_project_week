<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8 offset-lg-2 bg-white mb-5">
      <div class="d-flex flex-column align-items-center pb-5">
        <h1 class="text-center pt-5">
          <i class="far fa-thumbs-up"></i>
        </h1>
        <h1 class="text-center pt-4">Order #<%= @order.id %> </h1>
        <h4 class="text-center p-4"><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></h4>
        <h2 class="text-primary text-center pt-4 pb-2">Payment successful! 👏</h2>
        <div class="d-flex delivery-summary">
          <span class="text-center p-4 d-flex align-items-center summary-item flex-column">
            <h6 class="mb-0">Address:</h6> <%= @order.delivery_address %>
          </span>
          <span class="text-center p-4 d-flex align-items-center summary-item flex-column">
            <h6 class="mb-0">Phone number:</h6> <%= @order.delivery_contact_number %>
          </span>
        </div>
        <h6 class="text-center p-4"><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></h6>
        <p class="text-center pb-5">Estimated delivery in <strong>2 business days</strong></p>
      <a class="btn btn-lg-rounded-primary my-3" href="<%= root_path %>" >Back to Home</a>
      </div>
    </div>
  </div>
</div>
