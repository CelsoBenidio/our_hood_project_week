<div class="container">
  <%= simple_form_for @shop do |f| %>
    <%= f.input :store_name %>
    <%= f.input :owner_name %>
    <%= f.input :description, as: :text, input_html: {rows: 5} %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
