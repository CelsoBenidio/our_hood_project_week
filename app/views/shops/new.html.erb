<div class="container w-50 shadow-sm p-4 my-5">
  <h2 class="mb-4 text-center" id='main-green'>Leave us your contact</h2>
  <%= simple_form_for @shop do |f| %>
    <%= f.input :store_name %>
    <%= f.input :owner_name %>
    <%= f.input :description, as: :text, input_html: {rows: 5} %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
  <% end %>
</div>
