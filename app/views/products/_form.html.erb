<div class="container">
  <%= simple_form_for [@product] do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"btn-rounded-primary" %>
    </div>
  <% end %>

  <%=  link_to "Back to all products", products_path, class:"btn-rounded-primary" %>
</div>
