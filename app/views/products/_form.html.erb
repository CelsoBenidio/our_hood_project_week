<div class="form-container">
  <%= simple_form_for [@product] do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :category, collection: CATEGORIES, input_html: { class:"select2_form" }, include_hidden: false, as: :select  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:"btn-rounded-primary" %>
    </div>
  <% end %>
</div>
