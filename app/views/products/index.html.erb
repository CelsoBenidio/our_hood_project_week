<div class="small-cover-banner-center prdct-bnnr hero-section" id="products-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1501946623428-b301146b83af?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1701&q=80);">
  <div class="container text-center col-12 col-lg-8 py-5">
    <h1>Complement your box with additional <strong>unique</strong> products.</h1>
  </div>
</div>
  <div class="row">
    <div class="scrolling-wrapper w-100">
      <% @products.each do |product| %>
      <div class="col-12 col-lg-5">
        <div class="card my-3 product-card">
          <div class="row">
            <div class="col-6 px-0 product-image" style="background-image: url('<%= product.photo.attached? ? cl_image_path(product.photo.key) : product.default_picture %>')">
            </div>
            <div class=" col-6">
              <p id="category_name" class="pt-3"><%= product.category %></p>
              <h1 id="product_name"><%= product.name %></h1>
              <h2 id="price"><%= humanized_money_with_symbol(product.price) %></h2>
              <div class="py-3">
                <p class="desc"><%= product.description %></p>
                <div class="prdct-buttons">
                  <% if current_or_guest_user.cart.products.include?(product) %>
                  <%= simple_form_for CartProduct.where(product: product, cart: current_or_guest_user.cart).first, :method => :delete do |f| %>
                  <%= f.submit "Remove from cart", class: "card_button" %>
                  <% end %>
                  <% else %>
                  <%= simple_form_for @cart_product do |f| %>
                  <%= f.hidden_field :product_id, value: product.id  %>
                  <%= f.submit "Add to cart", class: "card_button" %>
                  <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<div class="checkout-yellow-banner p-3 ">
  <div class="row w-100 d-flex justify-content-end">
    <div class="col-12 col-lg-8 mx-auto mx-lg-0 mr-lg-3 mb-2 mb-lg-0">
      <h4 class="my-0 text-center text-lg-right">Sub-total</h4>
      <p class="my-0 text-center text-lg-right">10% discount on your first order.</p>
    </div>
    <%= link_to "Continue", cart_path, class: "btn-lg-rounded-primary col-lg-2 mr-2" %>
  </div>
</div>
